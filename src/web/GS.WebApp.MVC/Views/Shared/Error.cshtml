@model GS.WebApp.MVC.Models.ErrorViewModel
@{
    ViewData["Title"] = "Bad things happen!";
}
@{
    if (Model == null)
    {
        <div><h2>Our team are fixing the error</h2></div>
    }
    else
    {
        ViewData["Title"] = Model.Title;
        <div><h2>@Html.Raw(Model.Message)</h2></div>
    }
}